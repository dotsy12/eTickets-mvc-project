@model IEnumerable<eTickets.Models.Cinema>

@{
    ViewData["Title"] = "Cinemas";
}

<div class="container py-4">
    <h2 class="text-center mb-4">All Cinemas</h2>

    <div class="text-right mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Cinema
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped text-center align-middle">
            <thead class="thead-dark">
                <tr class="align-middle text-center">
                    <th>#</th>
                    <th>Logo</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr class="align-middle text-center">
                        <td colspan="5" class="text-muted">No cinemas found.</td>
                    </tr>
                }
                else
                {
                    int index = 1;
                    foreach (var cinema in Model)
                    {
                        <tr class="align-middle text-center">
                            <td>@index</td>
                            <td>
                                <img src="@cinema.Logo"
                                     alt="@cinema.Name"
                                     class="img-thumbnail shadow-sm"
                                     style="height: 90px; width: 90px; object-fit: cover; border-radius: 8px;" />
                            </td>
                            <td>@cinema.Name</td>
                            <td class="text-muted">@cinema.Description</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Edit" asp-route-id="@cinema.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@cinema.Id" class="btn btn-sm btn-info mx-3">
                                        <i class="bi bi-info-circle"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@cinema.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                        index++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
